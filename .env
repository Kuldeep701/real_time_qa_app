# .env example for Real-time Q&A App

# Perplexity Pro API Key (get from your Perplexity Pro account)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Flask secret key, use any long random string
SECRET_KEY=your_flask_secret_key_here

# Optional: Change as needed for Docker/WSL setup
HOST=0.0.0.0
PORT=5000
DEBUG=false

# Whisper model (tiny, base, small, medium, large)
WHISPER_MODEL=base
