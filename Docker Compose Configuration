version: '3.8'

services:
  realtime-qa:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: realtime-qa-app
    ports:
      - "5000:5000"
    environment:
      - PERPLEXITY_API_KEY=${PERPLEXITY_API_KEY}
      - SECRET_KEY=${SECRET_KEY}
      - DEBUG=${DEBUG:-false}
      - HOST=0.0.0.0
      - PORT=5000
      # WSL Audio Configuration
      - PULSE_SERVER=/mnt/wslg/PulseServer
    volumes:
      # WSL audio socket (essential for Windows 11 WSL2)
      - /mnt/wslg:/mnt/wslg:ro
      # Application logs
      - ./logs:/app/logs
      # Temp files
      - ./temp:/app/temp
    devices:
      # Audio device access (uncomment for non-WSL systems)
      # - /dev/snd:/dev/snd
    restart: unless-stopped
    networks:
      - qa-network
    depends_on:
      - redis
    
  # Optional: Redis for caching and session management
  redis:
    image: redis:7-alpine
    container_name: realtime-qa-redis
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    restart: unless-stopped
    networks:
      - qa-network

volumes:
  redis_data:

networks:
  qa-network:
    driver: bridge
